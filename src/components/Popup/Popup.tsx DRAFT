import styles from './Popup.module.css';

interface PopupProps {
  isActive: boolean;
  handlePopupClick: (e: React.MouseEvent<HTMLDivElement, MouseEvent>) => void;
  options: string[];
  handleCheckboxChange: (event: React.ChangeEvent<HTMLInputElement>) => void;
  filterName: string;
}

const Popup: React.FC<PopupProps> = ({ isActive, handlePopupClick, options, handleCheckboxChange, filterName }) => {
  return (
    isActive && (
      <div className={styles.popup}>
        <div className={styles.popup__content} onClick={handlePopupClick}>
          <ul className={styles.post__list}>
            {options.map((option, index) => (
              <li key={index} className={styles.post__item}>
                <label className={`${styles.post__label} link`}>
                  {option}
                  <input type="checkbox" className={styles.customCheckbox} value={option} name={filterName} onChange={handleCheckboxChange} />
                </label>
              </li>
            ))}
          </ul>
        </div>
      </div>
    )
  );
};

export default Popup;
